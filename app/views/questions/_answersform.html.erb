<h2>Answers</h2>

  <% @question.answers.each do |ans| %>
  <div class="answer-body">
    <span class="answer-author"> By: <%= ans.user_full_name.titleize %> </span>
    <p><%= ans.body %></p>
    <br>
    <br>
    <div>
      <% if can? :destroy, ans %>
      <%= link_to "delete", question_answer_path(@question, ans),
                            data: {confirm: "Are you sure?"},
                            method: :delete,
                            class: 'btn btn-info btn-xs' %>
      <% end %>
    </div>
  </div>
  <br>
<% end %>

<h2>Your Answer</h2>
  <div>
    <%= @answer.errors.full_messages.join(". ") %>
    <%# form_for @answer, url: question_answers_path(@question) do |f| %>
    <%= form_for [@question, @answer] do |form_helper| %>
      <%= form_helper.text_area :body , class:"input-lg", cols:"40", rows:"4", placeholder: "Add your answer here..."%>
      <br>
      <%= form_helper.submit "Post Answer", class:"btn-lg btn-success" %>
    <% end %>
  </div>
