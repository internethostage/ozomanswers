<%# dom id is used to generate a unique HTML id for elements from and ActiveRecord object. It uses an object type and its id to generate a unique id. %>
<div id="<%= dom_id(answer) %>" style="<%= style if defined?(style) %>">
  <div class="answer-body">
    <span class="answer-author"> By: <%= answer.user_full_name.titleize %> </span>
    <p><%= answer.body %></p>
    <br>
    <br>
    <div>
      <% if can? :destroy, answer %>
      <%= link_to "Delete", question_answer_path(@question, answer),
                            data: {confirm: "Are you sure?"},
                            method: :delete,
                            remote: true,
                            class: 'btn btn-info btn-xs' %>
      <% end %>

      <% if can? :edit, answer %>
        <%= link_to "Edit", edit_question_answer_path(@question, answer),
                            remote: true,
                            data: {toggle: "modal", target: "#edit-answer"},
                            class: "btn btn-info btn-xs" %>
      <% end %>

    </div>
  </div>
</div>
